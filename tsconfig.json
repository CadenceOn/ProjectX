{
    "compilerOptions": {
        "lib": ["dom", "es2017"],
        "outDir": "./dist/",
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es6",
        "jsx": "react-jsx",
        "baseUrl": "./src",
        "skipLibCheck": true,
        "types": ["node", "jest", "webpack-env"],
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": false
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.test.tsx",
        "node_modules/@types/jest"
    ]
}
